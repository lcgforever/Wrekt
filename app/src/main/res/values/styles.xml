<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.SmallTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="TextAppearance.AppCompat.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/error_color</item>
        <item name="android:fontFamily">@string/roboto_light</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
