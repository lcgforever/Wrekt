<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/change_username_text_input_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="24dp"
    android:textColorHint="@color/primary_light"
    app:errorEnabled="true"
    app:errorTextAppearance="@style/TextAppearance.AppCompat.Error"
    app:hintTextAppearance="@style/TextAppearance.AppCompat.Hint">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/change_username_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

</android.support.design.widget.TextInputLayout>